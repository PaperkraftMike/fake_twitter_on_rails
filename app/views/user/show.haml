-if current_user == @user
  %h1
    =@user.user_name
  %h3
    Notifications

  %h3
    Tweets
  -@user.tweets.each do |tweet|
    =tweet.text
    %br
    =tweet.created_at.strftime("%B %d, %Y at %I:%M %p")
    %br
    %br
    %h3 
      New Tweet
    =form_for Tweet.new, :url => user_tweet_index_path(@user) do |f|
      =f.text_area :text
      %br
      %br
      =f.submit
-else 
  %h1
    =@user.user_name
  =form_for @following, :url => user_following_index_path(@user) do |f|
    =f.submit
  %br
  -@user.tweets.each do |tweet|
    =tweet.text
    %br
    =tweet.created_at.strftime("%B %d, %Y at %I:%M %p")
    %br
    %br