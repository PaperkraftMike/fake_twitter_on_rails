%h3
  Create you Fake Twitter Account!

=form_for User.new, :url => "/user" do |f|
  =f.label :first_name
  =f.text_field :first_name
  =f.label :last_name
  =f.text_field :last_name
  =f.label :email
  =f.text_field :email
  =f.label :user_name
  =f.text_field :user_name
  =f.label :password
  =f.password_field :password
  =f.label :password_confirmation
  =f.password_field :password_confirmation
  =f.label :city
  =f.text_field :city
  =f.label :state
  =f.text_field :state
  =f.label :bio
  =f.text_field :bio